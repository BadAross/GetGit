@model List<Project>
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" 
    crossorigin="anonymous">
    <link rel="shortcut icon" href="Image/logo.svg" type="image-scale=1.0">
    <link rel="stylesheet" href="CSS/style.css">
    <title>GetGit</title>   
  </head>
<body>
    <form asp-action="Index" method="get">
        <div class="container">       
            <input asp-action="Index" method="get" type="text" name="SearchString" value="@ViewBag.Search" class="form-comtrol mt-3 mx-auto d-block"
                    placeholder="Введите название..." style="width: 50%;"/>
            <input class="btn btn-outline-success my-2 my-sm-0 mx-auto d-block" 
                    style="width: 20%;" type="submit" value="Search"/>
        </div>
    </form>
    <div class="container mt-3">
        <div class="row g-3">
            @if(Model != null)
            {
                @foreach (var project in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <link rel="stylesheet" href="@project.HtmlUrl">
                        <div class="card border-primary">
                            <div class="card-header bg-primary text-white">
                                Название: @project.Name
                            </div>
                            <div class="card-body">
                                <p class="card-text">Автор: @project.Login</p>
                                <p class="card-text">Звезды: @project.StargazersCount</p>
                                <p class="card-text">Просмотры: @project.WatchersCount</p>
                                <a href="@project.HtmlUrl" target="_blank" class="stretched-link"></a>
                            </div>
                        </div>
                    </div>
                }                  
            }                    
        </div>
    </div>
    <script 
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" 
    crossorigin="anonymous"></script>
  </body>
</html>
